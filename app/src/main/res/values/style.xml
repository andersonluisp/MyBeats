<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyTextInputLayout_overlay">
        <item name="colorOnSurface">@color/white_60</item>
        <item name="colorPrimary">@color/primary_200</item>
    </style>

    <style name="productInfoLabel">
        <item name="android:textSize">@dimen/product_detail_info</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:fontFamily">@font/dm_sans_700</item>
    </style>

    <style name="productInfoValue">
        <item name="android:textSize">@dimen/product_detail_info</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/dm_sans_400</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="commonButton">
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:fontFamily">@font/dm_sans_700</item>
        <item name="android:text">@string/buy</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="itemListProductModelText">
        <item name="android:fontFamily">@font/dm_sans_700</item>
        <item name="android:textColor">@color/white_80</item>
        <item name="android:textSize">@dimen/item_list_product_model_text_size</item>
    </style>

    <style name="itemListProductSubtitle">
        <item name="android:fontFamily">@font/dm_sans_400</item>
        <item name="android:textColor">@color/white_80</item>
        <item name="android:textSize">@dimen/item_list_product_subtitle_text_size</item>
    </style>

    <style name="itemListProductPrice">
        <item name="android:fontFamily">@font/dm_sans_700</item>
        <item name="android:textColor">@color/primary_300</item>
        <item name="android:textSize">@dimen/item_list_product_price_text_size</item>
    </style>

</resources>